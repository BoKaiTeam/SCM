@{
    ViewBag.Title = "用户登录";
}
@Styles.Render("~/bundles/signcss")
<div class="container">
    <form id="signinView" class="form-signin" role="form">
        <h2 class="form-signin-heading">请登录</h2>
        <input id="userCode" class="form-control" type="text" autofocus="" required="" placeholder="用户名"/>
        <input id="uPwd"class="form-control" type="password" autofocus="" required="" placeholder="密码"/>
        <div  class="checkbox" >
            <label>
                <input id="remain" type="checkbox"/>  保持登录
            </label>
        </div>
        <a id="btnSignin" class="btn btn-primary btn-lg btn-block" data-loading-text="正在登陆...">登录</a>
    </form>
</div>
<script>
    require(['Sign/SigninView'], function (SigninView) {
        var signinView = new SigninView({
            el: '#signinView'
        });
    })
</script>